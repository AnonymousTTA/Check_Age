#include <stdio.h>
#include <stdlib.h>

	void red() {
	printf("\033[1;31m");
	}
	void yellow() {
	printf("\033[1;33m");
	} 
	void cyan() {
	printf("\033[1;36m");
	}
	void reset() {
	printf("\033[0m");
	}

int main() {
	
	int age;
	char month[100];
	int subtract = 2019;
		
	system("clear"); // it will clear the terminal before running

	red();
	printf("\n                                          by Anonymous TTA\n");
	reset();
	printf("------------CHECK--YOUR--AGE------------\n\n");
	printf("Enter the year you were born: ");
	scanf("%d", &age);

	printf("Enter the month you were born: ");
	scanf("%s", month);
	
	printf("\n----------------------------------------\n");

	
	printf("\nYour age is: %d in %s\n\n", subtract-age, month);
	cyan();
	system("read -p '\nPress ENTER to end the session\n' var\n");
return 0;
}
